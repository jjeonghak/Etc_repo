//public : directly referenced outside of the class
//private : can be accessed only by functions within the class, default

//Constructor
#include<iostream>

class Class_name{
    int instance_member;
public:
    Class_name(){ instance_member = 0; }  //생성자메소드
    Class_name(int x){ instance_member = x; }  //생성자메소드 오버로딩  
};


//member initializer list
  1) 상수멤버 존재시
  2) 레퍼런스 멤버 존재시
  3) 멤버의 생성자 호출시
  4) 상속받을 클래스 부모 생성자 호출시
  
#include<iostream>

class Class_name{
    int instance_member;
public:
    Class_name() : instance_member(0) {}  //member initializer list
    Class_name(int x) : instance_member(x) {}
};
